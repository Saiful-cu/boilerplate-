# Backend Environment Variables
# Copy this file to .env and fill in the values

# Application Environment
# Values: development | staging | production
NODE_ENV=development

# Logging
# Log level: debug | info | warn | error
LOG_LEVEL=debug

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000

# Database Configuration (MongoDB)
# Set a MongoDB connection string for the application
# Preferred: MONGODB_DSN (Atlas DSN). If set, it will be used before MONGODB_URI.
MONGODB_DSN=mongodb+srv://<username>:<password>@cluster0.example.mongodb.net/noboraz-ecommerce?retryWrites=true&w=majority
MONGODB_URI=

# API Keys (never commit actual keys)
# API_SECRET_KEY=your-secret-key-here

# Feature Flags
# ENABLE_DEBUG_MODE=false
